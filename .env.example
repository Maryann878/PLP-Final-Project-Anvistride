# ============================================
# Server Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Server Configuration
# ============================================
# Port for the Express server (default: 5000)
PORT=5000

# Node environment: development, production, or test
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Examples:
#   - Local: mongodb://localhost:27017/anvistride
#   - MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
#   - Railway/Cloud: mongodb://user:pass@host:port/db
MONGODB_URI=mongodb://localhost:27017/anvistride

# Alternative MongoDB URI variable (for compatibility)
# MONGO_URI=mongodb://localhost:27017/anvistride

# ============================================
# Authentication & Security
# ============================================
# JWT secret key for signing tokens
# Generate a strong random string (minimum 32 characters recommended)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# ============================================
# CORS & Client Configuration
# ============================================
# Frontend URL for CORS configuration
# Development: http://localhost:5173
# Production: https://yourdomain.com
CLIENT_URL=http://localhost:5173

# ============================================
# Optional: Email Configuration (if implemented)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@anvistride.com

# ============================================
# Optional: File Upload Configuration (if implemented)
# ============================================
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# ============================================
# Optional: Rate Limiting Configuration
# ============================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
