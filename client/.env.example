# ============================================
# Client (Frontend) Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# 
# Note: Vite requires the VITE_ prefix for environment variables
# These variables are exposed to the client-side code

# ============================================
# API Configuration
# ============================================
# Backend API base URL
# Development: http://localhost:5000/api
# Production: https://your-api-domain.com/api
# 
# Note: The /api suffix is optional - the code will add it automatically
# Examples:
#   - http://localhost:5000/api
#   - https://api.anvistride.com/api
#   - api.anvistride.com (will be converted to https://api.anvistride.com/api)
VITE_API_BASE_URL=http://localhost:5000/api

# ============================================
# Optional: Feature Flags
# ============================================
# Enable/disable features in the frontend
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_CHAT=true
# VITE_ENABLE_NOTIFICATIONS=true

# ============================================
# Optional: Third-party Services
# ============================================
# Google Analytics ID (if using)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN (for error tracking)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# Optional: App Configuration
# ============================================
# App name (defaults to "AnviStride" if not set)
# VITE_APP_NAME=AnviStride

# App version
# VITE_APP_VERSION=1.0.0
